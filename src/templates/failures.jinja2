<html>
    <head>
        <title>Failures</title>
    </head>
    <body>
        <h1>Failures [{{item_type.name}}] @ [{{stage.name}}]</h1>
        <table>
            <tr>
                <th>Item ID</th>
                <th>Author</th>
                <th>Link</th>
                <th>Action</th>
            </tr>
            {% for it in items %}
            <tr>
                <td>{{it.item_id}}</td>
                <td>{{it.source_id}}</td>
                <td>
                    {% if it.url %}
                    <a href="{{it.url}}" target="_blank">Link</a>
                    {% else %}
                    None
                    {% endif %}
                </td>
                <td>
                    <form action="/failures/reset" method="post">
                        <input type="hidden" name="service" value="{{it.service.value}}">
                        <input type="hidden" name="item_id" value="{{it.item_id}}">
                        <input type="hidden" name="stage" value="{{stage.value}}">
                        <input type="submit" value="Reset">
                    </form>
                </td>
            </tr>
            {% endfor %}
        </table>
    </body>
</html>